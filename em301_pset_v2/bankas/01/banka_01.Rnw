\textbf{Задача 1.} При помощи метода наименьших квадратов найдите оценку неизвестного параметра $\theta$ в следующих моделях:

\begin{enumerate}
\item[(a)] $Y_i = \theta + \theta x_i + \varepsilon_i$
\item[(b)] $Y_i = \theta - \theta x_i + \varepsilon_i$
\item[(c)] $\text{ln} Y_i = \theta + ln x_i + \varepsilon_i$
\item[(d)] $Y_i = \theta + x_i + \varepsilon_i$
\item[(e)] $Y_i = 1 + \theta x_i + \varepsilon_i$
\item[(f)] $Y_i = \theta / x_i + \varepsilon_i$
\item[(g)] $Y_i = \theta x_{i1} + (1-\theta)x_{i2}+\varepsilon_i$
\end{enumerate}

\textbf{Задача 2.} Покажите, что для моделей $Y_i= \alpha + \beta x_i + \varepsilon_i$, $Z_i = \gamma + \delta x_i + \upsilon_i$ и $Y_i + Z_i = \mu + \lambda x_i + \xi_i$ МНК-оценки связаны соотношениями $\hat{\mu}=\hat{\alpha}+\hat{\gamma}$ и $\hat{\lambda}=\hat{\beta} + \hat{\delta}$.

\textbf{Задача 3.} Найдите МНК-оценки параметров $\alpha$ и $\beta$ в модели $Y_i = \alpha + \beta Y_i + \varepsilon_i$.

\textbf{Задача 4.} Рассмотрите модели $Y_i = \alpha + \beta (Y_i + Z_i) + \varepsilon_i$, $Z_i = \gamma + \delta(Y_i+Z_i) + \varepsilon_i$ и покажите, что $\hat{\alpha} + \hat{\gamma} = 0$ и $\hat{\beta} + \hat{\delta} = 1$.

\textbf{Задача 5.} Как связаны МНК-оценки параметров $\alpha, \beta$ и $\gamma, \delta$ в моделях $Y_i = \alpha + \beta x_i + \varepsilon_i$ и $Z_i = \gamma + \delta x_i + \upsilon_i$, если $Z_i = 2 Y_i$.

\textbf{Задача 6.} Для модели $Y_i = \beta_1 x_{i1} + \beta_2 x_{i2} + \varepsilon_i$ решите условную задачу о наименьших квадратах: $Q(\beta_1, \beta_2) := \sum_{i=1}^n (Y_i - \beta_1 x_{i1} - \beta_2 x_{i2})^2 \rightarrow \underset{\beta_1 + \beta_2 = 1}{\min}$

\textbf{Задача 7.} Рассмотрите классическую линейную регрессионную модель $Y_i = \beta x_i + \varepsilon_i$. Найдите $\mathbb{E} \hat{\beta}$. Какие из следующих оценок параметра $\beta$ являются несмещенными:

\begin{enumerate}
\item[(a)] $\hat{\beta} = \frac{Y_1}{x_1}$
\item[(b)] $\hat{\beta} = \frac{1}{2} \frac{Y_1}{x_1} + \frac{1}{2} \frac{Y_n}{x_n}$
\item[(c)] $\hat{\beta} = \frac{1}{n} \left( \frac{Y_1}{x_1} + \ldots + \frac{Y_n}{x_n} \right)$
\item[(d)] $\hat{\beta} = \frac{\overline{Y}}{\overline{x}}$
\item[(e)] $\hat{\beta} = \frac{Y_n - Y_1}{x_n - x_1}$
\item[(f)] $\hat{\beta} = \frac{1}{2} \frac{Y_2 - Y_1}{x_2 - x_1} + \frac{1}{2} \frac{Y_n - Y_{n-1}}{x_n - x_{n-1}}$
\item[(g)] $\hat{\beta} = \frac{1}{n} \frac{Y_2 - Y_1}{x_2 - x_1} + \frac{1}{n} \frac{Y_3 - Y_2}{x_3 - x_2} + \ldots + \frac{1}{n} \frac{Y_n - Y_{n-1}}{x_n - x_{n-1}}$
\item[(h)] $\hat{\beta} = \frac{1}{n-1} \left( \frac{Y_2 - Y_1}{x_2 - x_1} + \frac{Y_3 - Y_2}{x_3 - x_2} + \ldots + \frac{Y_n - Y_{n-1}}{x_n - x_{n-1}} \right)$
\item[(i)] $\hat{\beta} = \frac{x_1 Y_1 + \ldots + x_n Y_n}{x_1^2 + \ldots + x_n^2}$
\item[(j)] $\hat{\beta} = \frac{1}{2} \frac{Y_n - Y_1}{x_n - x_1} + \frac{1}{2n} \left( \frac{Y_1}{x_1} + \ldots + \frac{Y_n}{x_n} \right)$
\item[(k)] $\hat{\beta} =  \frac{1}{2} \frac{Y_n - Y_1}{x_n - x_1} + \frac{1}{2} \frac{x_1 Y_1 + \ldots + x_n Y_n}{x_1^2 + \ldots + x_n^2}$
\item[(l)] $\hat{\beta} = \frac{\sum_{i=1}^n (x_i - \overline{x})(Y_i - \overline{Y})}{\sum_{i=1}^n (x_i - \overline{x^2})^2}$
\item[(m)] $\hat{\beta} = \frac{\sum_{i=1}^n (x_i - \overline{x})(\overline{Y} - Y_i)}{\sum_{i=1}^n (x_i - \overline{x^2})^2}$
\item[(n)] $\hat{\beta} = \frac{Y_1 + 2 Y_2 + \ldots + n Y_n}{x_1 + 2 x_2 + \ldots + n x_n}$
\item[(o)] $\hat{\beta} = \frac{\sum_{i=1}^n i(Y_i - \overline{Y})}{\sum_{i=1}^n i(x_i - \overline{x})}$
\item[(p)] $\hat{\beta} = \frac{1}{n} \sum_{i=1}^n \frac{Y_i}{x_i}$
\item[(q)] $\hat{\beta} = \frac{1}{n} \sum_{i=1}^n \frac{Y_i - \overline{Y}}{x_i - \overline{x}}$
\end{enumerate}

